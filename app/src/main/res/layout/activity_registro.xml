<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.alessandro.testbottom.ActivityRegistro"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_profile"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_input_edit_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_profile"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_profile"
                android:hint="Apellido paterno"
                android:textSize="16.7sp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#003E5E"
                android:textColorHint="#003E5E"
                android:theme="@style/TextLabel" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_last_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_input_edit_last_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_profile"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_profile"
                android:textSize="16.7sp"
                android:hint="Apellido materno"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#003E5E"
                android:textColorHint="#003E5E"
                android:theme="@style/TextLabel" />
        </TableRow>




        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Fecha de nacimiento"
            android:theme="@style/TextLabel"/>
        <TableRow
            android:id="@+id/tr4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <DatePicker
                android:id="@+id/Datepick"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_below="@+id/set"
                android:layout_marginLeft="40dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"

                />

            <Button
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginRight="40dp"

                android:text=" ✓" />
        </TableRow>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:hint="N\u00FAmero Celular"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <TableRow
            android:id="@+id/tr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:text="Estado"
                android:textColor="#003E5E"
                android:textColorHint="#003E5E"
                android:theme="@style/TextLabel" />


            <Spinner
                android:id="@+id/spinner_estado"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/estado"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/estado"
                android:visibility="visible"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                android:layout_toRightOf="@+id/estado" />

            <TextView
                android:id="@+id/municipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/estado"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:text="Municipio"
                android:textColor="#003E5E"
                android:textColorHint="#003E5E"
                android:theme="@style/TextLabel"
                android:visibility="invisible"
                android:layout_alignLeft="@+id/estado" />

            <Spinner
                android:id="@+id/spinner_municipio"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"></Spinner>


        </TableRow>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_institucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_institucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_profile"
            android:hint="Institución"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:hint="Correo electr\u00F3nico"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#003E5E" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#003E5E" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menu_button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="40dp"
            android:background="#003E5E"
            android:onClick="validate"
            android:text="Registrar"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true" />

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>

