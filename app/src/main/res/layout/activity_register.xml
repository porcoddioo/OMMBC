<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:screenOrientation="portrait"
tools:context="com.example.stark.ommbc.RegisterController"
tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_profile"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_profile"
            android:hint="Apellido"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <TextView
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel"
            />

        <Spinner
            android:id="@+id/spinner_estado"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"></Spinner>

    <TextView
        android:id="@+id/municipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/estado"
        android:layout_marginTop="48dp"
        android:text="Municipio"
        android:textColor="#003E5E"
        android:textColorHint="#003E5E"
        android:theme="@style/TextLabel"
        android:visibility="invisible" />

        <Spinner
            android:id="@+id/spinner_municipio"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"></Spinner>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:hint="N\u00FAmero Celular"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:hint="Correo electr\u00F3nico"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#003E5E" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#003E5E" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menu_button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#003E5E"
            android:textColorHint="#003E5E"
            android:theme="@style/TextLabel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/menu_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="40dp"
            android:background="#003E5E"
            android:onClick="validate"
            android:text="Registrar"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>

